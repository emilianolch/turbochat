<%= turbo_stream_from @room %>

<%= turbo_frame_tag 'room' do %>
  <%= render @room %>

  <div class="mb-3">
    <%= link_to "Edit this room", edit_room_path(@room), class: 'btn btn-sm btn-secondary mb-1' %>
    <%= link_to "Delete this room", @room, method: :delete, 'data-turbo-frame': '_top', class: 'btn btn-sm btn-danger mb-1' %>
    <%= link_to "Back to rooms", rooms_path, 'data-turbo-frame': '_top', class: 'btn btn-sm btn-secondary mb-1' %>
  </div>
<% end %>

<div id="messages">
  <%= render @room.messages %>
</div>

<%= turbo_frame_tag 'new_message', src: new_room_message_path(@room), target: '_top' %>